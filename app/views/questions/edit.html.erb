<h1>Edit Question</h1>
<%= link_to 'Delete Question', @question, method: :delete, data: {confirm: 'Are you sure?'} %>
<%= form_for @question do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.submit "Edit Question", class: "button" %>
<% end %>
<br />
<%= link_to 'Return Home', questions_path %>
